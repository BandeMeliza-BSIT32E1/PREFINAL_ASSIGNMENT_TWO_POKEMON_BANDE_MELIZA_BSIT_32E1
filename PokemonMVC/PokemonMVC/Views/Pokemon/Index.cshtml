<style>
    ul {
        list-style-type: none;
        padding: 0;
    }

    li {
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ccc;
    }

    /* Styles for the navigation links */
    a {
        display: inline-block;
        padding: 8px 16px;
        text-decoration: none;
        color: #333;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #f9f9f9;
        transition: background-color 0.3s ease;
    }

        a:hover {
            background-color: #ddd;
        }
</style>



@model IEnumerable<PokemonMVC.Models.Pokemon>
@{
    ViewBag.Title = "Pokemon List";
}

<h2>Pokemon List</h2>
<ul>
    @if (Model != null)
    {
        @foreach (var pokemon in Model)
        {
            <li>
                <a href="@Url.Action("Details", "Pokemon", new { name = pokemon.Name })">@pokemon.Name</a>
            </li>
        }
    }
    else
    {
        <li>No Pokemon found.</li>
    }
</ul>

@if (ViewBag.Page > 1)
{
    <a href="@Url.Action("Index", new { page = ViewBag.Page - 1 })">Previous</a>
}
<a href="@Url.Action("Index", new { page = ViewBag.Page + 1 })">Next</a>